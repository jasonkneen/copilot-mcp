    "find-cache-dir": "^5.0.0",
    "lucide-react": "^0.475.0",
    "next-themes": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shell-quote": "^1.8.2",
    "sonner": "^2.0.1",
    "spawn-rx": "^5.1.2",
    "tailwind-merge": "^3.0.1",
